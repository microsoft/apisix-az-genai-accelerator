# -----------------------------------------------------------------------------
# Example tfvars for the 10-platform stack.
#
# Copy to <environment>.tfvars (e.g., dev.tfvars) and adjust the values before
# running:
#   terraform -chdir=infra/terraform/stacks/10-platform apply \
#     -var-file=<environment>.tfvars
# -----------------------------------------------------------------------------

# Subscription / tenant context (should match the bootstrap stack).
subscription_id = "00000000-0000-0000-0000-000000000000"
tenant_id        = "11111111-1111-1111-1111-111111111111"

# Naming inputs
environment_code = "dev"
location         = "eastus"
workload_name    = "apisix"
identifier       = ""

# Platform services
key_vault_purge_protection_enabled = false

# Optional naming overrides (leave blank to use standard naming)
platform_rg_name_override         = ""
acr_name_override                 = ""
key_vault_name_override           = ""

# Optional principal ID (object ID) of the service principal/user deploying
# the stack for Key Vault RBAC. Leave null if not required.
deployment_principal_id = null

# Tags applied to every foundation resource
tags = {
  owner       = "platform-team"
  environment = "dev"
  cost_center = "shared-services"
}
